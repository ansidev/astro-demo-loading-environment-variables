import Layout from "../layouts/Layout.astro";

const region = import.meta.env.VITE_REGION;
---

<Layout title="Astro Demo - Loading Environment Variables">
  <main>
    <h1>Homepage</h1>
    <h2>Astro Demo - Loading Environment Variables</h2>
    <p class="instructions">
      Region: {region}
    </p>
    <p>
